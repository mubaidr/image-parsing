{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./src",
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "_test_scripts", "__tests__", "_scripts"],
  "include": ["src/**/*"]
}
