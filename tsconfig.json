{
  "compilerOptions": {
    "allowJs": false,
    "rootDir": ".",
    "baseUrl": ".",
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noEmit": true,
    // "paths": {
    //   "@utilities/*": ["src/utilities/*"]
    // },
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "_test_scripts", "_scripts"],
  "include": ["src/**/*", "__tests__/**/*"]
}
