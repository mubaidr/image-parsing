{
  "compilerOptions": {
    "baseUrl": "src",
    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
