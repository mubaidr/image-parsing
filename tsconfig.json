{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "baseUrl": ".",
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "rootDir": ".",
    "sourceMap": true,
    "sourceRoot": ".",
    "strict": true,
    "target": "es2019"
  },
  "exclude": ["node_modules", "_test_scripts", "_scripts"],
  "include": ["src/**/*", "__tests__/**/*"]
}
