{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "worker": true
  },
  "extends": [
    "plugin:vue/recommended",
    "eslint:recommended",
    "@vue/typescript/recommended",
    "@vue/prettier",
    "@vue/prettier/@typescript-eslint"
  ],
  "globals": {
    "__static": "readonly"
  },
  "overrides": [
    {
      "env": {
        "es6": true,
        "node": true,
        "worker": true,
        "jest": true
      },
      "files": [
        "**/__tests__/*.{j,t}s?(x)",
        "**/tests/unit/**/*.spec.{j,t}s?(x)"
      ]
    },
    {
      "env": {
        "es6": true,
        "node": true,
        "worker": true
      },
      "files": [
        "@/utilities/workers/**/*.{j,t}s?(x)"
      ]
    },
    {
      "files": [
        "src/**/*.vue"
      ],
      "rules": {
        "@typescript-eslint/explicit-module-boundary-types": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "root": true,
  "rules": {
    "@typescript-eslint/ban-ts-comment": "off",
    "@typescript-eslint/explicit-module-boundary-types": "warn",
    "@typescript-eslint/no-empty-function": "warn",
    "no-console": "warn",
    "no-debugger": "warn",
    "prettier/prettier": "error"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "@/",
            "./src/"
          ]
        ],
        "extensions": [
          ".ts",
          ".js",
          ".tsx",
          ".jsx",
          ".vue",
          ".json"
        ]
      }
    }
  }
}
